<%= form_for @post, html: { class: "form-horizontal" } do |f| %>
    <p>
    	<%= f.label :title %> <br>
    	<%= f.text_field :title, class: "form-control" %>
    </p>
    <p>
    	<%= f.label :body %> <br>
    	<%= f.text_area :body, class: "ckeditor", id: "edit" %>
    </p>
  	<div><%= f.submit class: "btn btn-success" %></div>
<% end %>
