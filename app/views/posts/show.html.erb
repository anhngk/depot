<div class="col-md-12">
	<h1><%= @post.title %></h1>
	<p id="post_date">Created <%= time_ago_in_words(@post.created_at) %> ago.
		<% if session[:user_id] %>
			<a onclick = "window.location='<%= edit_post_path(@post) %>'">Edit</a> |
			<%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %>
		<% end %>
	</p>
	<p><%= @post.body %></p>
	<div id="comments">
		<h3 class="text-muted"><%= @post.comments.count %> Comments</h3>
		<%= render @post.comments %>
		<hr>
	</div>
</div>
<%= render "comments/form" %>