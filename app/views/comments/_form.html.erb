<div class="col-md-5">
<h3>Add a comment:</h3>
<%= form_for ([@post, @post.comments.build]), html: { class: "form-horizontal" } do |f| %>
	<%= f.label :name %> <br>
	<%= f.text_field :name, class: "form-control" %>
	<br>
	<%= f.label :body %> <br>
	<%= f.text_area :body, class: "ckeditor" %>
	<br>
	<%= f.submit class: "btn btn-primary"%>
<% end %>
</div>