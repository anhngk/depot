  <div class="col-md-12">
    <h3 id="catalog"><%= t('.title_html') %></h3>
    <div id="display-bar">    
      <strong>Display: </strong>
      <a href="#" id="list" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-th-list"></span>List</a> 
      <a href="#" id="grid" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-th"></span>Grid</a>
    </div>
  </div>

  <div class="col-md-12">
    <div id="products" class="row list-group">
      <% @products.each do |product| %>

        <div class ="item  col-xs-4 col-lg-4">
          <div class="thumbnail">
            <%= image_tag(product.image_url, class: "group list-group-image") %>
            <div class ="caption">
              <h4 class="group inner list-group-item-heading"><%= product.title %></h4>
              <p class="group inner list-group-item-text"><%= sanitize(product.description) %></p>
              
              <div class="row">
                <div class="col-xs-12 col-md-6">
                  <p class="lead"><%= number_to_currency(product.price) %></p>
                </div>
                <div class="col-xs-12 col-md-6">
                  <%= button_to t('.add_html'), line_items_path(product_id: product),remote: true, class: "btn btn-success" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
